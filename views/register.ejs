<div class="container center box">
    <%- include ('./partials/messages') %>
    <form class="formBlack" method="POST" action="/register">
        <h1 class="formTitle">Register form</h1>
        <div class="formRow block">
            <input class="inputText" type="text" name="user_name" required>
            <label>Username</label>
        </div>
        <div class="formRow block">
            <input class="inputText" type="text" name="user_mail" required>
            <label>E-mail</label>
        </div>
        <div class="formRow block">
            <input class="inputText" type="password" name="user_password" required>
            <label>Password</label>
        </div>
        <div class="formRow block">
            <input class="inputText" type="password" name="user_password1" required>
            <label>Repeat Password</label>
        </div>
        <input style="margin-bottom: 1.5rem;" class="inputBtn" type="submit" value="Register">
    </form>
</div>